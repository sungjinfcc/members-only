extends layout

block content
  h1 Login

  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='username' name='username' value=(username===undefined ? '' : username))
      label(for='password') Password:
      input#password.form-control(type='text', placeholder='password' name='password' value=(password===undefined ? '' : password))
      button(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg