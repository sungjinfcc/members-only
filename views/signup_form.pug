extends layout

block content
  h1 Sign-Up

  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='username' name='username' value=(username===undefined ? '' : username))
      label(for='password') Password:
      input#password.form-control(type='text', placeholder='password' name='password' value=(password===undefined ? '' : password))
      label(for='passwordConfirm') Confirm password:
      input#passwordConfirm.form-control(type='text', placeholder='confirm password' name='passwordConfirm' value=(passwordConfirm===undefined ? '' : passwordConfirm))
      button(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg