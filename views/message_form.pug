extends layout

block content
  h1 Enter message!

  form(method='POST' action='')
    div.form-group
      label(for='message') Message:
      input#message.form-control(type='text', placeholder='message' name='message' value=(message===undefined ? '' : message))
    button(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg